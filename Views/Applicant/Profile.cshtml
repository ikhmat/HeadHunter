@model User
@{
    ViewBag.Title = Model.UserName;
    Layout = "_Layout";
}
<div style="width:80%; margin-left:auto; margin-right:auto;">
    <div class="row" style="padding-top: 20px;">
        <div class="col-4">
            <img src="~/avatars/@Model.LinkImg" alt="avatar" style="vertical-align: middle; width: 150px; height: 150px; margin-left: auto; margin-right: auto; display: block;">
        </div>
        <div style="width:66%;padding-left:40px;">
            <span style="font-size:30px;">@Model.UserName</span>
            <br /><span>Email: @Model.Email</span>
            <br /><span>Name: @Model.Name</span>
            <br /><span>Surname: @Model.Surname</span>
            <br /><span>Phone number: @Model.Email</span>
            <button type="button" class="btn btn-light" data-toggle="modal" data-target="#editModal">Edit</button>
        </div>
    </div>
    <hr>
    <div class="py-2">
        <a asp-action="AddResume" asp-controller="Applicant">Add new resume</a>
    </div>
    <div class="resumes">
        @foreach (var item in ViewBag.Resumes)
        {
            <div class="card">
                <div class="card-body">
                    <div class="d-flex">
                        <h5 class="card-title">@item.JobTitle</h5>
                        <a asp-action="EditResume" asp-route-resumeId="@item.Id" class="btn btn-primary ml-auto mr-2">Edit</a>
                        <a asp-action="UpdateResume" asp-route-resumeId="@item.Id" class="btn btn-primary">Update</a>
                    </div>
                    <p class="card-text"><small class="text-muted">Last updated @item.UpdateDate</small></p>
                </div>
            </div>
        }
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Редактирование</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="Applicant" asp-action="Edit" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" onclick="">
                        <label asp-for="Email" class="control-label">Почта</label>
                        <input asp-for="Email" class="form-control" value="@Model.Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <label asp-for="UserName" class="control-label">Никнейм</label>
                    <input asp-for="UserName" class="form-control" value="@Model.UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Имя</label>
                        <input asp-for="Name" class="form-control" value="@Model.Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label">Фамилия</label>
                        <input asp-for="Surname" class="form-control" value="@Model.Surname" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
                        <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="file" class="btn">Change your profile picture</label><br />
                        <input type="file" name="file" />
                    </div>
                    <input type="hidden" asp-for="Id" value="@Model.Id">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                    <input class="btn btn-primary ml-3" type="submit" value="Отправить" />
                </form>
            </div>
        </div>
    </div>
</div>
